<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="2dp"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:layout_marginTop="2dp"
    android:padding="5dp">

    <TextView
        android:id="@+id/tv_form_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Large Text"
        android:textSize="@dimen/title_large"
        android:textColor="@color/colorPrimaryText" />

    <TextView
        android:id="@+id/tv_form_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_form_name"
        android:text="Status"
        android:textSize="@dimen/title_medium"
        android:textColor="@color/colorPrimary" />

    <TextView
        android:id="@+id/tv_form_short_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_form_status"
        android:text="Medium Text"
        android:textSize="@dimen/title_small" />
</RelativeLayout>