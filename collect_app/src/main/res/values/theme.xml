<?xml version="1.0" encoding="utf-8"?>
<resources>
<style name="Collect" parent="android:Theme.Light">
	<item name="android:scrollbarThumbHorizontal">@drawable/thumb</item>
	<item name="android:scrollbarThumbVertical">@drawable/thumb</item>
	<item name="android:scrollbarSize">1.75mm</item>
	<item name="android:scrollbarAlwaysDrawVerticalTrack">true</item>
	<item name="android:fadeScrollbars">false</item>
</style>

	<!-- Base application theme. -->
	<!--Material design -->
	<style name="AppTheme" parent="AppTheme.Base">

	</style>

	<style name="AppTheme.Base" parent="Theme.AppCompat.Light.DarkActionBar">
		<item name="windowNoTitle">true</item>
		<item name="windowActionBar">false</item>
		<item name="colorPrimary">@color/colorPrimary</item>
		<item name="colorPrimaryDark">@color/colorPrimaryDark</item>
		<item name="colorAccent">@color/colorAccent</item>
		<item name="android:textSize">12sp</item>
	</style>

	<style name="ToolbarTitle">
		<item name="android:textSize">16sp</item>
		<item name="android:textStyle">normal</item>
	</style>

	<style name="NavigationStyle">
		<item name="android:textSize">14sp</item> <!-- menu item text size-->
		<item name="android:textStyle">normal</item>
	</style>
</resources>
